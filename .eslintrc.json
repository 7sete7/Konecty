{
	"plugins": ["meteor", "@typescript-eslint"],
	"extends": ["plugin:@typescript-eslint/recommended", "plugin:meteor/recommended"],
	"rules": {
		"meteor/audit-argument-checks": 0,
		"meteor/template-names": 0,
		"meteor/eventmap-params": 0,
		"no-undef": ["error"],
		"no-console": ["error"]
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"env": {
		"es2020": true,
		"node": true
	}
}
